<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:DailyBites.ViewModels"
             x:Class="DailyBites.Views.RequestsPage"
             Shell.NavBarIsVisible="True"
             Shell.TabBarIsVisible="True">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16">

            <Label Text="Friend Requests"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Show when there are no requests -->
            <Label Text="You have no friend requests at the moment"
                   HorizontalOptions="Center"
                   IsVisible="{Binding HasNoRequests}" />

            <!-- Requests list -->
            <CollectionView ItemsSource="{Binding Requests}"
                            IsVisible="{Binding HasRequests}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                            StrokeThickness="1"
                            Padding="12"
                            Margin="0,6"
                            StrokeShape="RoundRectangle 10">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <!-- Profile image -->
                                <Image Grid.Column="0"
                                   WidthRequest="42" HeightRequest="42"
                                   Aspect="AspectFill"
                                   Source="{Binding ProfilePicUrl}">
                                    <Image.Clip>
                                        <EllipseGeometry Center="21,21" RadiusX="21" RadiusY="21" />
                                    </Image.Clip>
                                </Image>

                                <!-- Username + Name -->
                                <VerticalStackLayout Grid.Column="1"
                                     Padding="8,0"
                                     VerticalOptions="CenterAndExpand">
                                    <Label Text="{Binding Username}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                                    <Label Text="{Binding Name}"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                                </VerticalStackLayout>

                                <!-- Accept/Reject buttons -->
                                <HorizontalStackLayout Grid.Column="2"
                                   Spacing="12"
                                   VerticalOptions="Center">    
                                    <Button Text="✓"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:RequestsViewModel}}, Path=AcceptCommand}"
                                        CommandParameter="{Binding Uid}"
                                        TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}"
                                        BackgroundColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                        FontAttributes="Bold"
                                        CornerRadius="20"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        Padding="0" />

                                    <Button Text="✕"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:RequestsViewModel}}, Path=RejectCommand}"
                                        CommandParameter="{Binding Uid}"
                                        TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}"
                                        BackgroundColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                        FontAttributes="Bold"
                                        CornerRadius="20"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        Padding="0" />
                                </HorizontalStackLayout>

                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
