<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DailyBites.Views.SignupPage"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             Title="Sign Up">
    <VerticalStackLayout VerticalOptions="Center">

        <Label Text="Sign Up" FontSize="40" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,50"/>
        
        <HorizontalStackLayout Margin="30,0,0,30">
            <BoxView WidthRequest="7" HorizontalOptions="Start"/>
            <VerticalStackLayout Margin="10,0,0,0">
                <Label Text="Username" FontAttributes="Bold" FontSize="20" />
                <Entry Text="{Binding Username}" WidthRequest="300"/>
            </VerticalStackLayout>
        </HorizontalStackLayout>
        
        <HorizontalStackLayout Margin="30,0,0,30">
            <BoxView WidthRequest="7" HorizontalOptions="Start"/>
            <VerticalStackLayout Margin="10,0,0,0">
                <Label Text="Email" FontAttributes="Bold" FontSize="20" />
                <Entry Text="{Binding Email}" WidthRequest="300"/>
            </VerticalStackLayout>
        </HorizontalStackLayout>

        <HorizontalStackLayout Margin="30,0,0,40">
            <BoxView WidthRequest="7" HorizontalOptions="Start" CornerRadius="30"/>
            <VerticalStackLayout Margin="10,0,0,0">
                <Label Text="Password" FontAttributes="Bold" FontSize="20"/>
                <Entry Text="{Binding Password}" IsPassword="True" WidthRequest="300"/>
            </VerticalStackLayout>
        </HorizontalStackLayout>
        
        <HorizontalStackLayout Margin="30,0,0,40">
            <BoxView WidthRequest="7" HorizontalOptions="Start" CornerRadius="30"/>
            <VerticalStackLayout Margin="10,0,0,0">
                <Label Text="Confirm Password" FontAttributes="Bold" FontSize="20"/>
                <Entry Text="{Binding ConfirmPassword}" IsPassword="True" WidthRequest="300"/>
            </VerticalStackLayout>
        </HorizontalStackLayout>

        <Button 
        Text="Sign Up" 
        Command="{Binding SignUpCommand}" 
        FontAttributes="Bold"
        FontSize="20" Margin="10,0,0,10" 
        HorizontalOptions="Center" 
        HeightRequest="65" 
        WidthRequest="300"/>

        <StackLayout HorizontalOptions="Center" Margin="0,10,0,0">
            <Label HorizontalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Already have an account? " 
                            TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                        <Span Text="Log in"
                            TextColor="#007BFF">
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding GoToLoginCommand}" />
                            </Span.GestureRecognizers>
                        </Span>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>
