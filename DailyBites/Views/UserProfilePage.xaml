<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DailyBites.Views.UserProfilePage"
             Shell.NavBarIsVisible="True">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16">

            <Image WidthRequest="96" HeightRequest="96" Aspect="AspectFill" HorizontalOptions="Center"
       Source="{Binding ProfilePicUrl}">
                <Image.Clip>
                    <EllipseGeometry Center="48,48" RadiusX="48" RadiusY="48" />
                </Image.Clip>
            </Image>

            <Label Text="{Binding Username}" 
                   Style="{StaticResource Headline}" />

            <Label Text="{Binding Email}" 
                   HorizontalTextAlignment="Center"
                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />

            <Border Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                    StrokeThickness="1" Padding="12" StrokeShape="RoundRectangle 10">
                <HorizontalStackLayout HorizontalOptions="Center">
                    <Label Text="Friends: " FontAttributes="Bold" />
                    <Label Text="{Binding FriendCount}" />
                </HorizontalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
