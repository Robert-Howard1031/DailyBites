<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:DailyBites.ViewModels"
             x:Class="DailyBites.Views.SearchPage"
             Shell.NavBarIsVisible="False">

    <VerticalStackLayout Padding="20" Spacing="15">

        <SearchBar Placeholder="Search usersâ€¦"
                   Text="{Binding Query, Mode=TwoWay}"
                   SearchCommand="{Binding SearchCommand}" />

        <CollectionView ItemsSource="{Binding Results}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedUser, Mode=TwoWay}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                            StrokeThickness="1"
                            Padding="12"
                            Margin="0,6"
                            StrokeShape="RoundRectangle 10">
                        <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">

                            <!-- Profile Pic -->
                            <Image Grid.Column="0"
                                   WidthRequest="42"
                                   HeightRequest="42"
                                   Aspect="AspectFill"
                                   Source="{Binding ProfilePicUrl}" />

                            <!-- User Info -->
                            <VerticalStackLayout Grid.Column="1"
                                                 Padding="10,0"
                                                 VerticalOptions="Center">
                                <Label Text="{Binding Username}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                                <Label Text="{Binding Name}"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                            </VerticalStackLayout>

                            <!-- Always black action button -->
                            <Button Grid.Column="2"
                                    Text="{Binding FriendButtonText}"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SearchViewModel}}, Path=ToggleFriendCommand}"
                                    CommandParameter="{Binding .}"
                                    FontSize="12"
                                    Padding="14,6"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                    TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}"
                                    CornerRadius="20"
                                    HorizontalOptions="End"
                                    VerticalOptions="Center"
                                    WidthRequest="110"
                                    HeightRequest="40"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
