<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DailyBites.Views.PersonalProfilePage"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16">

            <!-- Profile picture -->
            <Image WidthRequest="96" HeightRequest="96" Aspect="AspectFill" HorizontalOptions="Center"
                   Source="{Binding ProfilePicUrl}">
                <Image.Clip>
                    <EllipseGeometry Center="48,48" RadiusX="48" RadiusY="48" />
                </Image.Clip>
            </Image>

            <!-- Username -->
            <Label Text="{Binding Username}" 
                   FontAttributes="Bold" 
                   FontSize="20" 
                   HorizontalOptions="Center"/>

            <!-- Full Name -->
            <Label Text="{Binding Name}" 
                   Style="{StaticResource Headline}" />

            <!-- Friend count as a button -->
            <Button Text="{Binding FriendCount, StringFormat='Friends: {0}'}"
                    Command="{Binding ViewFriendsCommand}"
                    HorizontalOptions="Center"
                    BackgroundColor="Transparent"
                    TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                    FontAttributes="Bold"
                    Padding="10" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
